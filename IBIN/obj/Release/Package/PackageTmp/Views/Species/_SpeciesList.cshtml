<div class="row">
    <div style="float: right;">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
              
                    if (i != ViewBag.CurrentPageIndex)
                    {

                    <li><a href="javascript:PagerClick(@i);">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:PagerClick(@i);">@i</a></li>
                }

            }
