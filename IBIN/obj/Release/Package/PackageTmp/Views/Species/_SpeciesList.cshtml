@{
    Layout = null;
}

<div class="row" style="border-bottom:1px solid #ccc; ">
    <h2 class="gallery_spcies ">Species List</h2>
</div>


@foreach (var item in Model.data)
{

    <div class="col-sm-3 col-xs-6">
        <div class="zoom">

            <a herf="#">
                <img class="img-responsive" height="195px" width="165px"  src="~/UploadedFiles/SpeciesFile/@item.FileName" style="border: 10px solid #ddd;" />
