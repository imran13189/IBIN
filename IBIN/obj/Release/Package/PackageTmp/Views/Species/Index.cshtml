<script>
    $(document).ready(function () {
        PagerClick(1);
        $("#txtscientific").keyup(function () {
            PagerClick(1);

        });
    });

    function PagerClick(i) {
        var search = { value: $("#txtscientific").val() }
        var request = { draw: i, start: (i - 1) * 12, length: 12, search: search };
        $.ajax({
            type: "POST",
            url: $_GetSpecies,
            data: request,
            success: function (resultdata) {
                GetListPage(resultdata)
            }
        });
    }

    function GetListPage(model) {
        $.ajax({
            type: "POST",
            url: $_GetSpeciesList,
            data: { model: model },
            success: function (resultdata) {
                $("#gallery").html(resultdata);
            }
        });
    }
</script>

