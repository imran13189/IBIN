

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Species";
}

<h2>Species</h2>
<div class="row">
    @Html.ActionLink("AddSpecies","AddSpecies", "Admin")
    </div>
    <div class="row">
        <table id="species" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Edit</th>

                </tr>
            </thead>

        </table>

        <script>
    $(document).ready(function () {
        $('#species').dataTable({

            "proccessing": true,
            "serverSide": true,
            "ajax": {
                "url": $_GetSpecies,
                "type": 'POST'
            },
            "language": {
                "search": "",
                "searchPlaceholder": "Search..."
            },
            "columns": [
                 { "data": "SpeciesName" },
                 { "data": "FileName" },
                 {
                     "data": "SpeciesId", "render": function (data, type, row) {

                         return '<a href="/Admin/AddSpecies/' + row.SpeciesId + '">Edit</a>';
                     }
                 },
],

       
        });
    });
        </script>
    </div>

