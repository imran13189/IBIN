
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "formCarType", @class = "form-horizontal" }))
{



    <div class="form-group">
        @Html.Label("Old password", new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            
            <input type="text" id="OldPassword" name="OldPassword" class = "form-control input-lg" />

        </div>
    </div>

    <div class="form-group">
        @Html.Label("New password", new { @class = "col-md-2 control-label" })

        <div class="col-md-3">
            <input type="text" id="NewPassword" name="NewPassword" class="form-control input-lg" />
        </div>

        <div class="col-md-3">
            <input type="submit" value="Save" />
        </div>

        <div class="col-md-3">
@ViewBag.Message
        </div>

    </div>

    
}


